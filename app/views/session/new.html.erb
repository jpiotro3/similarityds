<% title t(:login_form) %>
<div class="page-header">
  <h1><%= yield :title %></h1>
</div>
<%= form_for(:session, url: login_path, html: {class: 'form-horizontal', role: 'form'}) do |f| %>
    <%= form_email_field(f, @session, :email, :enter_email) %>
    <%= form_password_field(f, @session, :password, :enter_password) %>
    <%= form_submit(f, glyph_tag('log-in', t(:log_in))) %>
<% end %>
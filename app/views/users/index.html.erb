<% title 'User catalogue' %>
<div class="page-header">
  <h1><%= yield :title %></h1>
</div>
<%= link_to glyph_tag('plus', 'New user'), new_user_path, class: 'btn btn-primary' %>
<%= will_paginate @users, renderer: BootstrapPagination::Rails %>
<table class="table table-striped table-hover table-condensed">
  <thead>
      <tr>
        <th>E-mail</th>
        <th>Name</th>
        <th>Nick</th>
        <th></th>
      </tr>
  </thead>
  <tbody>
<% @users.each do |u| %>
    <tr>
      <td><%= mail_to u.email %></td>
      <td><%= u.full_name %></td>
      <td><%= u.nickname %></td>
      <td>
        <%= link_to glyph_tag('user', 'View'), user_path(u), class: 'btn btn-primary' %>
        <%= link_to glyph_tag('edit', 'Edit'), edit_user_path(u), class: 'btn btn-primary' %>
        <%= link_to glyph_tag('lock', 'Reset password'), reset_user_password_path(u), class: 'btn btn-primary' %>
      </td>
    </tr>
<% end %>
  </tbody>
</table>
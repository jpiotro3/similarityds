<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Image Similarity Data Collector</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body role="document">

<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
    <div class="container-fluid">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'SimilarityDS', root_path, class: 'navbar-brand' %>
      </div>
      <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="<%= active_cls(about_path) %>"><%= link_to 'About', about_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Admin <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li class="<%= active_cls(users_path) %>"><%= link_to 'Users', users_path %></li>
              </ul>
            </li>
            <% end %>
            <% if logged_in? %>
            <li class="<%= active_cls(profile_path) %>"><%= link_to 'My profile', profile_path %></li>
            <li><%= link_to 'Log out', logout_path, method: :delete %></li>
            <% else %>
            <li class="<%= active_cls(new_profile_path) %>"><%= link_to  'Register', new_profile_path %></li>
            <li class="<%= active_cls(login_path) %>"><%= link_to  'Log in', login_path %></li>
            <% end %>
          </ul>
      </div>
    </div>
</nav>

<div class="container" role="main">
  <% flash.each do |key, value| %>
      <div class="alert <%= flash_class(key) %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <strong><%= flash_header(key) %></strong> <%= value %>
      </div>
  <% end %>
  <%= yield %>
</div>

<%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
</body>
</html>
